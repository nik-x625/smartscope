alias p="ps -ef | egrep 'apache|sql|mongo|python'"
alias pip=pip3
alias ql='cd /opt/qlines_app'
alias teh='ssh -p 2277 root@localhost'
alias muc='ssh -p 2266 root@localhost'
alias git_log='git log --graph --oneline --decorate --all'


### Docker cli aliases
alias dps1='docker ps -a --format="table {{.ID}}\t{{.Image}}\t{{.Command}}\t{{.Status}}\t{{.Names}}"'
alias tmux_start='tmux new-session -t res -d;tmux new-session -t log -d;tmux new-session -t mqtt -d;tmux new-session -t mongo -d;tmux new-session -t client -d;tmux new-session -t test -d;'
alias dps2='docker ps -a --format '\''table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.RunningFor}}\t{{.Networks}}'\'
alias dps3='docker ps --format "table {{.ID}}\t{{.Names}}\t{{.Image}}\t{{.Status}}\t{{.Ports}}" | awk '\''NR>1{print $0 "\n"} NR==1{print $0}'\'''


### Zigbee, Homeassistant, MQTT, Mosquitto, etc.
alias mqtt='mosquitto_sub -t "#" -v'


### K8s aliases
alias kga='kubectl get all,secret,configmap,pvc,pv,ingress,serviceaccount'
alias kgi='kubectl get all,ingress'


# SmartScope aliases
alias back="cd /opt/smartscope_back"
alias front="cd /opt/smartscope_front"
alias plt="docker exec -it $(docker ps  | grep 'smartscope_be_container' | awk '{print $1}') /bin/bash"
alias tests_back1="docker exec -it $(docker ps  | grep 'smartscope_be_container' | awk '{print $1}') pytest -v /opt/test_simple_api_actions.py"
alias tests_back2="docker exec -it $(docker ps  | grep 'smartscope_be_container' | awk '{print $1}') pytest -v /opt/test_simple_api_file_image_for_editor.py"
alias mongo="docker exec -it $(docker ps  | grep 'mongo' | awk '{print $1}') mongosh smartscope"

CONTAINERS=(smartscope_fe_container smartscope_be_container traefik smartscope_mongodb_container)
alias logs='for container in "${CONTAINERS[@]}"; do docker logs --follow "$container" 2>&1 | sed "s/^/[$container] /" & done; wait'
alias logs_tr="tail /opt/proxy_traefik/logs/access.log -f | jq"
alias site="cd /opt/smartscope_website_replit_v2"
